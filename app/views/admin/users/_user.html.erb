<aside>
  <section class="user_info">
    <h1>
      <%= link_to edit_admin_user_path(user) do %>
        <%= gravatar_for user, size: Settings.user.avatar_size %>
        <%= user.name %>
      <% end %>
      <%= link_to "", admin_user_path(user), method: :delete, data: {confirm: 
        t(".confirm_delete")}, class: "glyphicon glyphicon-trash" %>
    </h1>
  </section>
</aside>
